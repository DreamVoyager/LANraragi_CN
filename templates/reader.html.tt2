<!DOCTYPE html>

<head>
    <title>[% title %]</title>

    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="apple-mobile-web-status-bar-style" content="black" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />

    <link type="image/png" rel="icon" href="favicon.ico" />
    <link rel="manifest" href="app.webappmanifest" />
    <link rel="stylesheet" type="text/css" href="[% c.url_for("/css/lrr.css?$version") %]" />
    <link rel="stylesheet" type="text/css" href="[% c.url_for("/css/config.css?$version") %]" />

    <link rel="stylesheet" type="text/css" href="[% c.url_for("/css/vendor/fontawesome-all.min.css") %]" />
    <link rel="stylesheet" type="text/css" href="[% c.url_for("/css/vendor/ReactToastify.min.css") %]" />
    <link rel="stylesheet" type="text/css" href="[% c.url_for("/css/vendor/sweetalert2.min.css") %]" />
    [% csshead %]

    <script src="[% c.url_for("/js/vendor/jquery.min.js") %]" type="text/javascript"></script>
    <script src="[% c.url_for("/js/vendor/preact.umd.js") %]" type="text/JAVASCRIPT"></script>
    <script src="[% c.url_for("/js/vendor/hooks.umd.js") %]" type="text/JAVASCRIPT"></script>
    <script src="[% c.url_for("/js/vendor/compat.umd.js") %]" type="text/JAVASCRIPT"></script>
    <script>window.React = window.preactCompat; window.react = window.preactCompat;</script>
    <script src="[% c.url_for("/js/vendor/clsx.min.js") %]" type="text/JAVASCRIPT"></script>
    <script src="[% c.url_for("/js/vendor/react-toastify.umd.js") %]" type="text/JAVASCRIPT"></script>
    <script src="[% c.url_for("/js/vendor/sweetalert2.min.js") %]" type="text/JAVASCRIPT"></script>

    <script src="[% c.url_for("/js/common.js?$version") %]" type="text/javascript"></script>
    <script src="[% c.url_for("/js/server.js?$version") %]" type="text/javascript"></script>
    <script src="[% c.url_for("/js/reader.js?$version") %]" type="text/javascript"></script>

    <script type="module">
        import('[% c.url_for("/js/vendor/fscreen.esm.js") %]').then(r => {
            window.fscreen = r.default;
            Reader.initializeAll();
        })
    </script>
</head>

<body>

    <div id="i1" class="sni">
        <div id="i2">
            <h1 id="archive-title">...</h1>

            [% INCLUDE pagesel %] [% INCLUDE arrows %] [% INCLUDE fileinfo %]
        </div>

        <div id="i3" class="loading">
            <div class="loading-overlay">
                <p class="loading-spinner">
                    <i id="spinner" class="fa fa-fan fa-spin"></i>
                </p>
            </div>

            <a id="display">
                <img id="img" class="reader-image" src=""><img id="img_doublepage" class="reader-image" src="">
            </a>

        </div>

        <div id="i4">
            [% INCLUDE fileinfo %] [% INCLUDE pagesel %] [% INCLUDE arrows %]
        </div>

        <div id="i5">
            <div class="sb">
                <a href="[% c.url_for("/").query(ref_query) %]" id="return-to-index" title="看完了吗? 点击返回首页">
                    <i class="fa fa-angle-down fa-3x"></i>
                </a>
            </div>
        </div>

        <div id="i7" class="if">
            <i class="fa fa-caret-right fa-lg"></i>
            <a id="imgLink" style="cursor:pointer;">查看全尺寸图像</a>
            <i class="fa fa-caret-right fa-lg"></i>
            <a href="[% c.url_for("/random") %]">切换到另一个随机档案</a>
        </div>

    </div>

    <script>
        // This would be better in the reader.js file, but it's faster to source this data from the server template for now.
        Reader.trackProgressLocally = "[% use_local %]" === "1";
    </script>

    <div id="overlay-shade"></div>
    <div id="archivePagesOverlay" class="id1 base-overlay page-overlay" style="display:none" loaded="false">
        <h2 class="ih" id="archive-title-overlay" style="text-align:center">档案描述</h2>
        <div id="tagContainer" class="caption caption-tags caption-reader">
            <br>
            <div style="margin-bottom:16px;">
                <div class="id3 nocrop reader-thumbnail">
                    <img src="[% c.url_for("/api/archives/$id/thumbnail") %]" />
                </div>

                [% IF userlogged %]
                <div style="display:inline-block; vertical-align: middle;">

                    <h2>管理员选项</h2>

                    <input class="stdbtn" type='button' id="set-thumbnail" value="将此页面设置为缩略图"
                        style="width:160px" title="将当前打开的页面设置为此存档的缩略图." />
                    <input id="regenerate-cache" class='stdbtn' type='button' value='清理档案缓存'
                        style="width:160px" />
                    <br>
                    <input id="edit-archive" class='stdbtn' type='button' value='编辑档案元数据'
                        style="width:160px" />
                    <input id="delete-archive" class='stdbtn' type='button' value='删除档案'
                        style="width:160px" />

                    <h2>分类</h2>

                    <div id="archive-categories" style="display:inline-block">
                        [% FOREACH arc_categories %]
                        <div class="gt" style="font-size:14px; padding:4px">
                            <a href="[% c.url_for("/").query("c=$id") %]">
                                <span class="label">[% name %]</span>
                                <a href="#" class="remove-category" data-id="[% id %]"
                                    style="margin-left:4px; margin-right:2px">×</a>
                            </a>
                        </div>
                        [% END %]
                    </div>

                    <br />
                    <span>添加到 : </span>
                    <select id="category" class="favtag-btn" style="width:200px; margin-right: 8px">
                        <option selected value=""> -- 无分类 -- </option>
                        [% FOREACH categories %]
                        <option value="[% id %]">[% name %]</option>
                        [% END %]
                    </select>
                    <a class="fas fa-plus" id="add-category" href="#" title="将档案添加到分类"></a>
                </div>
                [% END %]
            </div>

        </div>

        <br><br>

        <h2 class="ih" style="text-align:center">页面</h2>

        <div id="extract-spinner" style="width: 80%; margin-left: auto; margin-right: auto">
            <p class="loading-spinner">
                <i id="spinner" class="fa fa-dharmachakra fa-4x fa-spin"></i>
            </p>
            正在处理...
        </div>
    </div>
    </div>
    </div>
    <div id="settingsOverlay" class="id1 base-overlay small-overlay" style="display:none">
        [% INCLUDE config %]
    </div>

    <canvas id="dpcanvas" style="display:none" width="100" height="100"></canvas>

    <div id="reader-help" style="display: none;">
        <div class="navigation-help-toast">
            可以使用:
            <ul>
                <li>箭头图标</li>
                <li>键盘 a/d 按键</li>
                <li>键盘左右按键 (和空格键)</li>
                <li>点击图像的左右侧.</li>
            </ul>
            <br>其它键盘快捷键:
            <ul>
                <li>M: 切换漫画模式 (从右到左阅读)</li>
                <li>O: 显示高级阅读器选项.</li>
                <li>P: 切换双页模式</li>
                <li>Q: 调出缩略图索引和存档选项.</li>
                <li>R: 打开随机档案.</li>
                <li>F: 切换全屏模式</li>
            </ul>
            <br>要返回档案索引, 请触摸向下的箭头或使用退格(Backspace)键.
        </div>
    </div>

    [% INCLUDE footer %]
</body>

</html>



[% #compute those blocks before getting to the main html %]

<!-- -->
[% BLOCK config %]

<h2 class="ih" style="text-align:center">阅读选项</h2>

<h1 class="ih config-panel">这些选项会自动保存 -- 点击查看!</h1>

<div id="fit-mode">
    <h2 class="config-panel"> 显示 </h2>
    <input id="fit-container" class="favtag-btn config-btn" type="button" value="自适应">
    <input id="fit-width" class="favtag-btn config-btn" type="button" value="适应宽">
    <input id="fit-height" class="favtag-btn config-btn" type="button" value="适应高">
</div>

<div id="container-width">
    <h2 class="config-panel"> 显示宽度 (以像素或百分比为单位)</h2>
    <input id="container-width-input" class="stdinput" style="display:inline; width: 70%;"
        placeholder="在双页模式下, 默认为 1200px 或 90% .">
    <input id="container-width-apply" class="favtag-btn config-btn" type="button" style="display:inline;" value="应用">
</div>

<div id="toggle-double-mode">
    <h2 class="config-panel"> 页面展示 </h2>
    <input id="single-page" class="favtag-btn config-btn" type="button" value="单页">
    <input id="double-page" class="favtag-btn config-btn" type="button" value="双页">
</div>

<div id="toggle-manga-mode">
    <h2 class="config-panel"> 翻页方向 </h2>
    <span class="config-panel"></span>
    <input id="normal-mode" class="favtag-btn config-btn" type="button" value="从左到右">
    <input id="manga-mode" class="favtag-btn config-btn" type="button" value="从右到左">
</div>

<div id="preload-images">
    <h2 class="config-panel"> 要预加载的图像数量</h2>
    <input id="preload-input" class="stdinput" style="display:inline" placeholder="The default is two images.">
    <input id="preload-apply" class="favtag-btn config-btn" type="button" style="display:inline;" value="应用">
</div>

<div id="toggle-header">
    <h2 class="config-panel"> 标头 </h2>
    <input id="show-header" class="favtag-btn config-btn" type="button" value="显示">
    <input id="hide-header" class="favtag-btn config-btn" type="button" value="隐藏">
</div>

<div id="toggle-overlay">
    <h2 class="config-panel"> 默认情况下显示档案覆盖 </h2>
    <span class="config-panel">这将在您每次打开新的档案页面时显示带有缩略图的叠加层.
    </span>
    <input id="show-overlay" class="favtag-btn config-btn" type="button" value="开启">
    <input id="hide-overlay" class="favtag-btn config-btn" type="button" value="禁用">
</div>


<div id="toggle-progress">
    <h2 class="config-panel"> 阅读进度 </h2>
    <span class="config-panel">禁用后，每次重新打开阅读器时，都会从第一页重新开始读取.
    </span>
    <input id="track-progress" class="favtag-btn config-btn" type="button" value="开启">
    <input id="untrack-progress" class="favtag-btn config-btn" type="button" value="禁用">
</div>

<div id="toggle-infinite-scroll">
    <h2 class="config-panel"> 无限滚动 </h2>
    <span class="config-panel">在同一页面的垂直视图中显示所有图像.
    </span>
    <input id="infinite-scroll-on" class="favtag-btn config-btn" type="button" value="开启">
    <input id="infinite-scroll-off" class="favtag-btn config-btn" type="button" value="禁用">
</div>

[% END %]
<!-- -->
[% BLOCK arrows %]
<div class="sn paginator">
    <a class="fa fa-angle-double-left page-link" style="font-size: 1.5em;" value="outer-left"></a>
    <a class="fa fa-angle-left page-link" style="font-size: 1.5em;" value="left"></a>

    <div class="pagecount">
        <span class="current-page">...</span> /
        <span class="max-page">...</span>
    </div>

    <a class="fa fa-angle-right page-link" style="font-size: 1.5em;" value="right"></a>
    <a class="fa fa-angle-double-right page-link" style="font-size: 1.5em;" value="outer-right"></a>
</div>
[% END %]
<!-- -->
[% BLOCK pagesel %]
<div class="absolute-options absolute-left">
    <a class="fa fa-cog fa-2x" id="toggle-settings-overlay" href="#" title="阅读设置"></a>
    <a class="fa fa-question-circle fa-2x" id="toggle-help" href="#" title="帮助"></a>
</div>

<div class="absolute-options absolute-right">
    <a class="fa fa-arrow-right fa-2x reading-direction" href="#" title="阅读方向"></a>
    <a class="fa fa-th fa-2x" id="toggle-archive-overlay" href="#" title="档案描述"></a>
    <a class="fa fa-compress fa-2x" id="toggle-full-screen" href="#" title="全屏"></a>
</div>
[% END %]
<!-- -->
[% BLOCK fileinfo %]
<div class="file-info">

</div>
[% END %]
